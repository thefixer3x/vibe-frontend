# Database Configuration
# Drizzle uses POSTGRES_URL (preferred). Keep DATABASE_URL only if other tools require it.
POSTGRES_URL="postgresql://user:pass@host:5432/db"
DATABASE_URL="postgresql://user:pass@host:5432/db"
AUTH_SECRET="your-auth-secret"
SINGLE_USER_MODE="true"  # enable single-operator mode (no sign-in)
ADMIN_ACCESS_KEY="set-a-strong-random-key"  # used to grant admin access via ?key=<value>
ADMIN_EMAIL="info@lanonasis.com"  # default admin email for identification

# Memory Service Configuration
NEXT_PUBLIC_MEMORY_API_URL="/api/memory"  # Use local proxy or direct URL
NEXT_PUBLIC_MEMORY_API_KEY="your-memory-api-key"  # For direct Supabase access

# Gateway Configuration  
NEXT_PUBLIC_GATEWAY_URL="http://localhost:3001"  # Or production gateway URL

# MCP Configuration
NEXT_PUBLIC_MCP_SERVER_URL="ws://localhost:3002/mcp"  # Local MCP WebSocket server
NEXT_PUBLIC_MCP_MODE="auto"  # auto, local, or remote
NEXT_PUBLIC_ENABLE_MCP="true"  # Enable/disable MCP integration

# Stripe Configuration (for payment features)
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"

# Environment
NODE_ENV="development"  # development, production
# Frontend base URL (used for absolute redirects like Stripe return URLs)
# In production, set this to your custom domain, e.g.:
# BASE_URL="https://vibe.seyederick.com"
BASE_URL="http://localhost:3000"

# Optional: Backup login for emergencies (uses bcrypt hash)
# BACKUP_LOGIN_ENABLED="true"
# BACKUP_USER_EMAIL="info@lanonasis.com"
# BACKUP_USER_PASSWORD_HASH="$2a$10$example..."  # bcrypt hash of your chosen password

# Apple App Store Connect (optional)
ENABLE_APPLE_CONNECT="false" # set to true to enable Apple Connect features
APPLE_ISSUER_ID="your-issuer-id" # App Store Connect API Issuer ID
APPLE_KEY_ID="your-key-id" # App Store Connect API Key ID
# Either paste raw .p8 contents or base64-encode the key and paste here
APPLE_PRIVATE_KEY="YOUR_APPLE_PRIVATE_KEY_P8_OR_BASE64"
